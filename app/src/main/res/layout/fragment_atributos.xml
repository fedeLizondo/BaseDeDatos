<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AtributosFragment">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_FragmentAtributos"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tituloAgregarAtributo"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:padding="12dp"
        android:textColor="@color/colorText_Icons"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_weight="0"
        />
    <!--View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" /-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Atributos"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:paddingTop="8dp"
            style="@android:style/Widget.DeviceDefault.ExpandableListView"
            android:divider="@android:color/darker_gray"
            android:scrollbarStyle="outsideOverlay"
            android:layout_weight="1"
            />

    <!--ListView
        android:entries="@array/Determinantes"
        android:id="@+id/listViewAtributos"
